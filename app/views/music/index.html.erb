<% content_for(:title, "Flagrant Orange | Music") %>

<div class="regular-navigation">
  <%= link_to root_path do %>
    <h1 class="home"><span class="light">Flagrant</span> <span class="pop">Orange</span></h1>
  <% end %>
  <h2 class="active">Music</h2>
  <h2 class="link"><%= link_to 'Shows', shows_path %></h2>
  <h2 class="link"><%= link_to 'Contact', contact_path %></h2>
</div>

<div class="mobile-navigation">
  <%= link_to root_path do %>
    <h1 class="home"><span class="light">Flagrant</span> <span class="pop">Orange</span></h1>
  <% end %>
  <h2 class="active">Music</h2>
  <h2 class="link"><%= link_to 'Shows', shows_path %></h2>
  <h2 class="link"><%= link_to 'Contact', contact_path %></h2>
</div>

<% if @songs.any? %>
  <div class="row shows text-center">
    <h2 class="active text-center">Music</h2>
    <hr>
    <% @songs.each do |song| %>
      <div class="lyric-display">
        <h3 class="show-lyrics display-inline-block"><%= song.title %></h3>
        <i class="fa fa-caret-up fa-lg"></i>
        <i class="fa fa-caret-down fa-lg"></i>
        <br>
        <% if song.audio.present? %>
          <%= audio_tag(song.audio, controls: true, controlsList: "nodownload") %>
        <% end %>
        <div class="lyrics">
          <p><%= song.lyrics %><p>
        </div>
      </div>
    <% end %>
  </div>
<% end %>

<div class="row shows">
  <%= image_tag 'bw5.jpg', class: 'regular-image' %>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jplayer/2.9.2/add-on/jplayer.playlist.js"></script>

<script>
  $(document).ready(function() {
    $("audio").bind("contextmenu",function(){
      return false;
    });
  });
</script>
