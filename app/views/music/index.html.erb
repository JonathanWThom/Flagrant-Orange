<% content_for(:title, "Flagrant Orange | Music") %>

<div class="regular-navigation">
  <%= link_to root_path do %>
    <h1 class="home"><span class="light">Flagrant</span> <span class="pop">Orange</span></h1>
  <% end %>
  <h2 class="active">Music</h2>
  <h2 class="link"><%= link_to 'Shows', shows_path %></h2>
  <h2 class="link"><%= link_to 'Contact', contact_path %></h2>
</div>

<div class="mobile-navigation">
  <%= link_to root_path do %>
    <h1 class="home"><span class="light">Flagrant</span> <span class="pop">Orange</span></h1>
  <% end %>
  <h2 class="active">Music</h2>
  <h2 class="link"><%= link_to 'Shows', shows_path %></h2>
  <h2 class="link"><%= link_to 'Contact', contact_path %></h2>
</div>

<div class="row soundcloud">
  <iframe width="100%" scrolling="no" height="450" frameborder="no" src="https://w.soundcloud.com/player/?url=https%3A//api.soundcloud.com/users/292463638&amp;auto_play=false&amp;hide_related=false&amp;show_comments=true&amp;show_user=true&amp;show_reposts=false&amp;visual=true"></iframe>
</div>

<% if @songs.any? %>
  <div class="row shows text-center">
    <h2 class="active text-center">Lyrics</h2>
    <hr>
    <% @songs.each do |song| %>
      <h3 class="show-lyrics"><%= song.title %></h3>
      <div class="lyrics">
        <p><%= song.lyrics %><p>
      </div>
    <% end %>
  </div>
<% end %>

<div class="row shows">
  <%= image_tag 'bw5.jpg', class: 'regular-image' %>
</div>
